# PORT=3000
# PROVIDER=openai   
# OPENAI_API_KEY=your-openai-key

# Hugging Face API Key
# HF_MODEL=unitary/toxic-bert 
PORT=3000
PROVIDER=huggingface
HF_API_KEY=hf_xxx
HF_MODEL=unitary/toxic-bert # Hugging Face model - chọn model phù hợp với nhu cầu của bạn
HF_THRESHOLD=0.5              # ngưỡng tối thiểu để label được chấp nhận
HF_TOP1_FALLBACK=0.7           # nếu không label nào qua ngưỡng, nhận top1 nếu >= 0.7*threshold
VN_RULES_ENABLED=true           # bật lớp luật VN
VN_RULES_STRICT=false          # true = chặt tay hơn (block mạnh)
CACHE_TTL_MS=60000             # 60s cache kết quả theo text
PROVIDER_DEBUG=true